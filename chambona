<h1>
    <!-- Texto com letras de cores alternadas -->
    Chambinha, topa sair comigo na minha folga?
</h1>

<!-- Botões -->
<button onclick="irParaLink()">Sim!</button>
<button id="botaoNao" onclick="fugirNao()">Não!</button>

<script>
    // Função para redirecionar ao clicar em "Sim"
    function irParaLink() {
        window.location.href = "https://www.youtube.com/watch?v=izGwDsrQ1eQ";
    }

    // Função para fazer o botão "Não" se mover
    function fugirNao() {
        var botaoNao = document.getElementById('botaoNao');
        var randomX = Math.floor(Math.random() * 80) + 10; // Gera um valor aleatório de posição X
        var randomY = Math.floor(Math.random() * 80) + 10; // Gera um valor aleatório de posição Y
        botaoNao.style.position = 'absolute';
        botaoNao.style.left = randomX + '%'; // Define a posição X
        botaoNao.style.top = randomY + '%';  // Define a posição Y
    }
</script>

